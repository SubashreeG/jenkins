pipeline {
    agent {
        docker {
            image 'maven:3.8.1-adoptopenjdk-11'
        }
    }
    stages {
        stage('Build Web Application') {
            steps {
                sh 'mvn clean package' // Use 'clean package' to build a WAR
            }
        }
        stage('Static Code Analysis') {
            environment {
                SONAR_URL = 'http://3.209.59.238:9000' // Removed extra colon
            }
            steps {
                withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_API_TOKEN')]) {
                    sh "mvn sonar:sonar -Dsonar.login=\$SONAR_API_TOKEN -Dsonar.host.url=\${SONAR_URL}" // Corrected variable name
                }
            }
        }
    }
}
