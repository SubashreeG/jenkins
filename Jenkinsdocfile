pipeline {
    agent any

    environment {
        DOCKER_HUB_USERNAME = 'suba99ee' // Your Docker Hub username
        DOCKER_HUB_PASSWORD = 'Suba@99ee' // Use your Docker Hub credentials ID
        DOCKER_IMAGE_NAME = 'suba99ee/imagewithdocker' // Replace with your Docker Hub username and image name
        DOCKER_IMAGE_TAG = 'latest' // You can customize the tag as needed
        JAR_FILE_PATH = '/var/lib/jenkins/workspace/dockertrial/target/devops-engineer-details-1.0-SNAPSHOT.jar'
    }

    stages {
        stage('Push JAR to Docker Hub') {
            steps {
                script {
                    // Authenticate with Docker Hub
                    withCredentials([string(credentialsId: 'docker-hub-credentials', variable: 'DOCKER_HUB_PASSWORD')]) {
                        sh "docker login -u ${DOCKER_HUB_USERNAME} -p \${DOCKER_HUB_PASSWORD}"
                    }

                    // Push the JAR file as an artifact to the Docker image
                    sh "docker cp ${JAR_FILE_PATH} ${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG}/app/"

                    // Commit the changes to the Docker image
                    sh "docker commit ${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG} ${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG}"

                    // Push the updated Docker image to Docker Hub
                    sh "docker push ${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG}"
                }
            }
        }
    }
}
